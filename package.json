{
  "name": "gradient-svg",
  "version": "1.1.0",
  "description": "Svg module of the gradient.js library",
  "main": "gradient-svg.js",
  "scripts": {
    "dev": "rollup -c",
    "test": "jest --coverage",
    "docs": "./node_modules/.bin/jsdoc ./index.js -d ./docs --readme ./README.md",
    "dev-docs": "./node_modules/.bin/jsdoc -p ./index.js -d ./docs --readme ./README.md",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "keywords": [
    "chroma-js",
    "colors",
    "gradients"
  ],
  "author": "Jakub Antolak <poprostuantolak@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.0.4",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "ghooks": "^2.0.4",
    "jest": "^23.4.2",
    "jsdom": "^11.11.0",
    "rollup": "^0.63.5",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-cleanup": "^3.0.0",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-terser": "^1.0.1",
    "semantic-release": "^15.9.5",
    "travis-deploy-once": "^5.0.2"
  },
  "dependencies": {
    "chroma-js": "^1.3.7",
    "gradient-base": "^1.0.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test"
    },
    "jest": {
      "coverageThreshold": {
        "global": {
          "branches": 50,
          "functions": 50,
          "lines": 50,
          "statements": 50
        }
      },
      "coverageDirectory": "./coverage",
      "collectCoverage": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/afternoon2/gradient-svg.git"
  }
}
